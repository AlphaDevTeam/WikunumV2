<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">
    <!--
        Added the constraints for entity Designs.
    -->
    <changeSet id="20191208181125-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="related_product_id"
                                 baseTableName="designs"
                                 constraintName="fk_designs_related_product_id"
                                 referencedColumnNames="id"
                                 referencedTableName="products"/>

        <addForeignKeyConstraint baseColumnNames="location_id"
                                 baseTableName="designs"
                                 constraintName="fk_designs_location_id"
                                 referencedColumnNames="id"
                                 referencedTableName="location"/>

        <addForeignKeyConstraint baseColumnNames="history_id"
                                 baseTableName="designs"
                                 constraintName="fk_designs_history_id"
                                 referencedColumnNames="id"
                                 referencedTableName="document_history"/>

    </changeSet>
</databaseChangeLog>
