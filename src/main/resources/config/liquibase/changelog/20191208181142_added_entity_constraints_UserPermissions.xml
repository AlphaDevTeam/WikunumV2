<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">
    <!--
        Added the constraints for entity UserPermissions.
    -->
    <changeSet id="20191208181142-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="user_id"
                                 baseTableName="user_permissions"
                                 constraintName="fk_user_permissions_user_id"
                                 referencedColumnNames="id"
                                 referencedTableName="ex_user"/>

        <addForeignKeyConstraint baseColumnNames="history_id"
                                 baseTableName="user_permissions"
                                 constraintName="fk_user_permissions_history_id"
                                 referencedColumnNames="id"
                                 referencedTableName="document_history"/>

        <addForeignKeyConstraint baseColumnNames="user_group_id"
                                 baseTableName="user_permissions"
                                 constraintName="fk_user_permissions_user_group_id"
                                 referencedColumnNames="id"
                                 referencedTableName="user_group"/>

    </changeSet>
</databaseChangeLog>
