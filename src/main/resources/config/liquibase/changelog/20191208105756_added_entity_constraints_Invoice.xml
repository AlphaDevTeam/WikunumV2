<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">
    <!--
        Added the constraints for entity Invoice.
    -->
    <changeSet id="20191208105756-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="item_id"
                                 baseTableName="invoice"
                                 constraintName="fk_invoice_item_id"
                                 referencedColumnNames="id"
                                 referencedTableName="items"/>

        <addForeignKeyConstraint baseColumnNames="history_id"
                                 baseTableName="invoice"
                                 constraintName="fk_invoice_history_id"
                                 referencedColumnNames="id"
                                 referencedTableName="document_history"/>

    </changeSet>
</databaseChangeLog>
